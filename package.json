{
	"name": "nextjs-sanity",
	"version": "0.0.0",
	"description": "Next.js & Sanity template",
	"private": true,
	"scripts": {
		"dev": "concurrently \"next\" \"cd studio && sanity start\"",
		"start": "vercel dev",
		"build": "echo 'Building Sanity to public/studioâ€¦' && cd studio && sanity build ../public/studio -y && cd .. && next build",
		"test": "xo && jest"
	},
	"keywords": [
		"JAMstack",
		"Sanity",
		"Next.js"
	],
	"author": "Aron Hafner",
	"license": "MIT",
	"dependencies": {
		"@chakra-ui/react": "^1.0.4",
		"@chakra-ui/theme-tools": "^1.0.2",
		"@emotion/react": "^11.1.4",
		"@emotion/styled": "^11.0.0",
		"@sanity/asset-utils": "^1.1.2",
		"@sanity/block-content-to-react": "^2.0.7",
		"@sanity/client": "^2.1.0",
		"@sanity/image-url": "^0.140.19",
		"date-fns": "^2.16.1",
		"framer-motion": "^3.1.1",
		"get-youtube-id": "^1.0.1",
		"next": "^10.0.4",
		"next-sanity": "^0.1.8",
		"next-seo": "^4.17.0",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-icons": "^4.1.0",
		"react-youtube": "^7.13.0",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"@sanity/cli": "^2.0.9",
		"@sanity/types": "^2.1.0",
		"@testing-library/jest-dom": "^5.11.6",
		"@testing-library/react": "^11.2.2",
		"@types/jest": "^26.0.19",
		"@types/node": "^14.14.14",
		"@types/react": "^17.0.0",
		"@types/react-dom": "^17.0.0",
		"@types/uuid": "^8.3.0",
		"@typescript-eslint/eslint-plugin": "^4.8.2",
		"@typescript-eslint/parser": "^4.8.2",
		"babel-jest": "^26.6.3",
		"concurrently": "^5.3.0",
		"eslint-config-xo-react": "^0.23.0",
		"eslint-config-xo-typescript": "^0.36.0",
		"eslint-plugin-react": "^7.21.5",
		"eslint-plugin-react-hooks": "^4.2.0",
		"jest": "^26.6.3",
		"typescript": "^4.1.2",
		"vercel": "^21.0.1",
		"xo": "^0.34.2"
	},
	"babel": {
		"plugins": [],
		"presets": [
			"next/babel"
		]
	},
	"jest": {
		"collectCoverageFrom": [
			"**/*.{js,jsx,ts,tsx}",
			"!**/*.d.ts",
			"!**/node_modules/**"
		],
		"setupFilesAfterEnv": [
			"@testing-library/jest-dom/extend-expect"
		],
		"testPathIgnorePatterns": [
			"/node_modules/",
			"/.next/"
		],
		"transform": {
			"^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/babel-jest"
		},
		"transformIgnorePatterns": [
			"/node_modules/"
		],
		"moduleNameMapper": {
			"@components/(.*)": "<rootDir>/components/$1",
			"@lib/(.*)": "<rootDir>/lib/$1",
			"@models/(.*)": "<rootDir>/models/$1"
		}
	},
	"prettier": {
		"printWidth": 120,
		"singleQuote": true,
		"jsxSingleQuote": true
	},
	"xo": {
		"envs": [
			"browser",
			"node",
			"jest"
		],
		"extends": [
			"xo-react",
			"xo-typescript"
		],
		"extensions": [
			"ts",
			"tsx",
			"js"
		],
		"ignore": [
			"next.config.js",
			"next-env.d.ts",
			"public/studio/static",
			"*/**/plugins",
			"*/**/config"
		],
		"prettier": true,
		"rules": {
			"import/no-anonymous-default-export": [
				"error",
				{
					"allowObject": true
				}
			],
			"arrow-body-style": [
				"error",
				"as-needed"
			],
			"@typescript-eslint/no-unsafe-member-access": "warn",
			"@typescript-eslint/no-base-to-string": "warn",
			"@typescript-eslint/no-unsafe-call": "warn",
			"@typescript-eslint/prefer-readonly-parameter-types": "off",
			"@typescript-eslint/restrict-template-expressions": "warn",
			"react/prop-types": "off",
			"react/no-danger": "warn",
			"react/react-in-jsx-scope": "off",
			"react/jsx-tag-spacing": [
				"error",
				{
					"closingSlash": "never",
					"beforeSelfClosing": "always",
					"afterOpening": "never",
					"beforeClosing": "never"
				}
			]
		}
	}
}
