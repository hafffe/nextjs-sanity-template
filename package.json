{
	"name": "nextjs-sanity",
	"version": "0.0.0",
	"description": "Next.js & Sanity template",
	"private": true,
	"scripts": {
		"build": "lerna run build --parallel",
		"build:web": "lerna bootstrap && (cd web && npm run build)",
		"build:studio": "lerna bootstrap && (cd studio && npm run build)",
		"deploy:studio": "lerna run deploy",
		"deploy:graphql": "lerna run graphql-deploy:production",
		"deploy:graphql-stage": "lerna run graphql-deploy:staging",
		"dev": "lerna run dev --parallel",
		"postinstall": "lerna bootstrap",
		"test": "xo && lerna run test --parallel",
		"lint": "xo",
		"version": "lerna version"
	},
	"keywords": [
		"JAMstack",
		"Sanity",
		"Next.js"
	],
	"author": "Aron Hafner",
	"license": "MIT",
	"devDependencies": {
		"@sanity/cli": "^2.0.9",
		"@typescript-eslint/eslint-plugin": "^4.8.2",
		"@typescript-eslint/parser": "^4.8.2",
		"eslint-config-xo-react": "^0.23.0",
		"eslint-config-xo-typescript": "^0.36.0",
		"eslint-plugin-react": "^7.21.5",
		"eslint-plugin-react-hooks": "^4.2.0",
		"lerna": "^3.22.1",
		"sanity-codegen": "^0.3.1",
		"typescript": "^4.1.2",
		"xo": "^0.34.2"
	},
	"prettier": {
		"printWidth": 120,
		"singleQuote": true,
		"jsxSingleQuote": true
	},
	"xo": {
		"envs": [
			"browser",
			"node",
			"jest"
		],
		"extends": [
			"xo-react",
			"xo-typescript"
		],
		"extensions": [
			"ts",
			"tsx",
			"js"
		],
		"ignore": [
			"*/**/next.config.js",
			"*/**/next-env.d.ts",
			"*/**/types.tsx",
			"*/**/plugins",
			"*/**/config"
		],
		"prettier": true,
		"rules": {
			"import/no-anonymous-default-export": [
				"error",
				{
					"allowObject": true
				}
			],
			"arrow-body-style": [
				"error",
				"as-needed"
			],
			"@typescript-eslint/no-unsafe-member-access": "warn",
			"@typescript-eslint/no-base-to-string": "warn",
			"@typescript-eslint/no-unsafe-call": "warn",
			"@typescript-eslint/prefer-readonly-parameter-types": "off",
			"@typescript-eslint/restrict-template-expressions": "warn",
			"react/prop-types": "off",
			"react/no-danger": "warn",
			"react/react-in-jsx-scope": "off",
			"react/jsx-tag-spacing": [
				"error",
				{
					"closingSlash": "never",
					"beforeSelfClosing": "always",
					"afterOpening": "never",
					"beforeClosing": "never"
				}
			]
		}
	}
}
