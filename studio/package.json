{
	"name": "sanity-studio",
	"private": true,
	"version": "1.0.0",
	"description": "",
	"main": "package.json",
	"author": "Aron Hafner <aronhafner@gmail.com>",
	"license": "UNLICENSED",
	"scripts": {
		"start": "sanity start",
		"dev": "sanity start",
		"build": "sanity build",
		"deploy": "sanity deploy",
		"graphql-deploy:production": "sanity graphql deploy --playground --dataset production",
		"graphql-deploy:staging": "sanity graphql deploy --playground --dataset staging",
		"test": "xo && sanity check"
	},
	"keywords": [
		"sanity"
	],
	"dependencies": {
		"@sanity/base": "^1.149.15",
		"@sanity/components": "^1.149.15",
		"@sanity/core": "^1.149.13",
		"@sanity/dashboard": "^1.149.15",
		"@sanity/default-layout": "^1.149.15",
		"@sanity/default-login": "^1.149.11",
		"@sanity/desk-tool": "^1.149.15",
		"@sanity/production-preview": "^1.149.0",
		"@sanity/vision": "^1.149.0",
		"date-fns": "^2.13.0",
		"prop-types": "^15.6",
		"react": "^16.2",
		"react-dom": "^16.2",
		"react-icons": "^3.10.0",
		"sanity-plugin-asset-source-unsplash": "^0.1.3",
		"sanity-plugin-media": "^0.2.10",
		"slugify": "^1.4.0"
	},
	"devDependencies": {
		"eslint-config-xo-react": "^0.23.0",
		"eslint-plugin-react": "^7.19.0",
		"eslint-plugin-react-hooks": "^4.0.0",
		"xo": "^0.30.0"
	},
	"prettier": {
		"printWidth": 120,
		"singleQuote": true,
		"jsxSingleQuote": true
	},
	"xo": {
		"envs": [
			"browser",
			"node"
		],
		"extends": [
			"xo-react"
		],
		"ignore": [
			"plugins",
			"config"
		],
		"extensions": [
			"js"
		],
		"prettier": true,
		"rules": {
			"import/no-anonymous-default-export": [
				"error", {
					"allowObject": true
				}
			],
			"react/jsx-tag-spacing": [
				"error",
				{
					"closingSlash": "never",
					"beforeSelfClosing": "always",
					"afterOpening": "never",
					"beforeClosing": "never"
				}
			]
		}
	}
}
